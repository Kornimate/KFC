<UserControl 
  x:Class="KFC.Controls.MenuButton"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  x:Name="_menuButton">
  
  <Grid Cursor="Hand">

    <Button 
      Style="{StaticResource MenuButtonStyle}" 
      Content="{Binding Label, ElementName=_menuButton}" 
      Width="{Binding Width, ElementName=_menuButton}"
      Height="{Binding Height, ElementName=_menuButton}"
      Command="{Binding Command, ElementName=_menuButton}"
      CommandParameter="{Binding CommandParameter, ElementName=_menuButton}"/>

  </Grid>
  
</UserControl>
